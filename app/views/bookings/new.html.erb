<div class="container">
  <h1>Booking for flight <%= @flight.flight_number %></h1>

  <h3>Flight Date: <%= @flight.start_datetime %></h3>
  <h3>Departure Airport: <%= @flight.departure_airport.code %></h3>
  <h3>Arrival Airport: <%= @flight.arrival_airport.code %></h3>

  <h2>Passengers</h2>
  <%= form_with(model: @booking, local: true) do |form| %>
    <%= form.hidden_field :flight_id, value: @flight.id %>

    <%= form.fields_for :passengers do |passenger_form| %>
      <div class="field">
        <%= passenger_form.label :name %>
        <%= passenger_form.text_field :name %>
      </div>

      <div class="field">
        <%= passenger_form.label :email %>
        <%= passenger_form.text_field :email %>
      </div>
    <% end %>

    <%= form.submit "Create Booking", class: "button-flights" %>
    <%= link_to "Back to Search", root_path, class: "button-flights" %>
  <% end %>
</div>
